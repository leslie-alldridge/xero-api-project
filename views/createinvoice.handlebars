{{#if outcome }}
<h2>{{ outcome }}</h2>{{/if}} {{#if id }}<a href="/emailinvoice?id={{id}}" class="btn btn-xs btn-primary">Email</a>{{/if}}

<h3>Invoice</h3>
<form method="POST" action="createinvoice">
  Invoice type 
  <select name="Type">
    <option value="ACCREC">Accounts Receivable</option>
    <option value="ACCPAY">Accounts Payable</option>
  </select> 
  Contact <input name="Contact" type="text" value="{{customer}}"><br> 
  Date <input name="Date" type="text" value="{{date}}"><br>
  Description <input name="Description" type="text" value="Daily sales for {{customer}}"> 
  Quantity <input name="Quantity" type="number" value="1"> 
  Amount <input name="Amount" type="number" value="{{total}}">
  <br>
  <input type="submit" value="Submit">
</form>